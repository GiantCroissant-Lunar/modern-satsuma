root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csx}]
indent_size = 4
# MA0048: File name must match type name
dotnet_diagnostic.MA0048.severity = none
# MA0051: Method is too long
dotnet_diagnostic.MA0051.severity = none
# MA0008: Add StructLayoutAttribute
dotnet_diagnostic.MA0008.severity = none
# MA0015: Invalid parameter name
dotnet_diagnostic.MA0015.severity = none
# MA0016: Prefer returning collection abstraction
dotnet_diagnostic.MA0016.severity = none
# RS2008: Enable analyzer release tracking
dotnet_diagnostic.RS2008.severity = none
# RS1036: EnforceExtendedAnalyzerRules
dotnet_diagnostic.RS1036.severity = none
# NSUSG001: Using inside namespace
dotnet_diagnostic.NSUSG001.severity = none
# MA0002: IEqualityComparer/IComparer for string
dotnet_diagnostic.MA0002.severity = none
# MA0011: IFormatProvider for Parse/TryParse
dotnet_diagnostic.MA0011.severity = none
# MA0097: Comparison operators for IComparable
dotnet_diagnostic.MA0097.severity = none
# MA0025: Implement functionality (NotImplementedException)
dotnet_diagnostic.MA0025.severity = none
# MA0026: TODO
dotnet_diagnostic.MA0026.severity = none
# MA0006: Use string.Equals instead of Equals operator
dotnet_diagnostic.MA0006.severity = none
# CS0414: Field assigned but never used
dotnet_diagnostic.CS0414.severity = none
# CS8602: Possible null reference dereference
dotnet_diagnostic.CS8602.severity = none
# CS8604: Possible null reference argument
dotnet_diagnostic.CS8604.severity = none

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{csproj,props,targets}]
indent_size = 2
